<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/bg_search_box_less_radius">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지금 수성못에 아이유 떳다!"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="대구 수성구 두산동"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintStart_toStartOf="@+id/title_txt"
            app:layout_constraintTop_toBottomOf="@+id/title_txt" />

        <TextView
            android:id="@+id/extra_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="·"
            android:fontFamily="@font/pretendard_black"
            android:textColor="@color/black"

            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/location_txt"
            app:layout_constraintStart_toEndOf="@+id/location_txt"
            app:layout_constraintTop_toTopOf="@+id/location_txt" />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:fontFamily="@font/pretendard_medium"
            android:text="30분 전"
            android:textSize="14dp"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/extra_txt"
            app:layout_constraintStart_toEndOf="@+id/extra_txt"
            app:layout_constraintTop_toTopOf="@+id/extra_txt" />

        <TextView
            android:id="@+id/more_view_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"

            android:layout_marginStart="25dp"
            android:layout_marginBottom="20dp"
            android:text="상세보기"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/comment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_medium"
            android:text="댓글 24"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/more_view_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/more_view_txt" />

        <TextView
            android:id="@+id/extra_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_black"
            android:text="·"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/more_view_txt"
            app:layout_constraintEnd_toStartOf="@+id/comment_txt"
            app:layout_constraintTop_toTopOf="@+id/more_view_txt" />

        <TextView
            android:id="@+id/view_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/pretendard_medium"
            android:text="조회수 102회"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/more_view_txt"
            app:layout_constraintEnd_toStartOf="@+id/extra_txt2"
            app:layout_constraintTop_toTopOf="@+id/more_view_txt" />







    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>